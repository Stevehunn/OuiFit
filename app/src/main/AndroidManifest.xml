<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ouifit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OuiFit">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainConnectActivity"
            android:label="@string/app_name">
        </activity>

        <!--Activité pour les Menus -->
        <activity
            android:name=".Menu.MenuCourseActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Menu.MenuExercicesActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Menu.MenuStatActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".InscriptionActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".LangueActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/app_name"></activity>

        <!--Activité pour les exercices des Abdominaux -->
        <activity
            android:name=".ExerciceAbdo.Exercice1AbdoActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ExerciceAbdo.Exercice2AbdoActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ExerciceAbdo.Exercice3AbdoActivity"
            android:label="@string/app_name">
        </activity>

        <!--Activité pour les exercices des Bras -->
        <activity android:name=".ExerciceBras.Exercice1BrasActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ExerciceBras.Exercice2BrasActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ExerciceBras.Exercice3BrasActivity"
            android:label="@string/app_name">
        </activity>

        <!--Activité pour les exercices du Dos -->
        <activity android:name=".ExerciceDos.Exercice1DosActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ExerciceDos.Exercice2DosActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ExerciceDos.Exercice3DosActivity"
            android:label="@string/app_name">
        </activity>


    </application>

</manifest>